{{# if successMsg}}
<div class="row">
    <div class="col-sm-6 col-md-4 col-md-offset-4 col-sm-offset-3">
        <div class="alert alert-success" >
            {{successMsg}}
        </div>
    </div>
</div>
{{/ if}}

<div class="row">
    {{# each products}}
    <div class="col-sm-6 col-md-4 heighto">
        <div class="card h-100" style="position: relative;">
            <img class="card-img-top" src="{{this.imagePath}}" alt="Card image cap">
            <div class="card-body" style="position:absolute;bottom:0px;">
                <h4 class="card-title">{{this.title}}</h4>
                <p class="card-text description">{{this.description}}</p>
                <div>
                    <div class="price pull-left">${{this.price}}</div>
                    <a href="./add-to-cart/{{this._id}}" class="btn btn-primary pull-right" role="button">Add to cart</a>
                    {{!-- <a href="/add-to-cart/{{this._id}}" class="btn btn-default" role="button">Button</a> --}}
                </div>
            </div>
        </div>
    </div>
    {{/each}}
</div>
